<div class="row-fluid">   
      <div class="span4">
        <div class="control-group">
          <%= f.label :category, "Category", :class => "control-label" %>
          <div class="controls">
            <% if @category.nil? %>
              <%= f.collection_select :category_id, categories, :first, :second, :prompt => true %>
            <% else %>
              <%= f.collection_select :category_id, categories, :first, :second, :selected => @category[:id] %>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div id="venue" class="span4">
        <div class="control-group">
          <%= f.label :venue_id, "Venue", :class => "control-label" %>
          <div class="controls">
            <% if @venue.nil? %>
              <%= f.collection_select :venue_id, venues, :id, :name, :selected => activity.venue_id || current_user.venues.find_by_name(Venue::DEFAULT).id %>
            <% else %>
              <%= f.collection_select :venue_id, venues, :id, :name, :selected => @venue.id %>
            <% end %> 
          </div>
        </div>
      </div>
      <div id="client" class="span4">
        <div class="control-group">
          <%= f.label :client_id, "Client", :class => "control-label" %>
          <div class="controls">
            <% if @client.nil? %>
              <%= f.collection_select :client_id, clients, :id, :name, :selected => activity.client_id || current_user.clients.find_by_name(Client::DEFAULT).id %>
            <% else %>
              <%= f.collection_select :client_id, clients, :id, :name, :selected => @client.id %>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div id="start_date" class="span4">
        <div class="control-group">
          <%= f.label :date_start, "Start Date", :class => "control-label", :id => "start_date_label" %>
          <div class="controls">
            <% if activity.date_start.present? %>
              <%= f.text_field :date_start, :class => "datepicker", :value => activity.date_start.strftime("%d %B %Y") %>
            <% else %>
              <%= f.text_field :date_start, :class => "datepicker" %>
            <% end %>
          </div>
        </div>
      </div>
      <div id="end_date" class="span4">
        <div class="control-group">
          <%= f.label :date_end, "End Date", :class => "control-label", :id => "end_date_label" %>
          <div class="controls">
            <% if activity.date_end.present? %>
              <%= f.text_field :date_end, :class => "datepicker", :value => activity.date_end.strftime("%d %B %Y") %>
            <% else %>
              <%= f.text_field :date_end, :class => "datepicker" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
 