  <%= form_for(activity, :html => { :class => "form-horizontal" }) do |f| %>
   	<%= render 'shared/error_messages', object: f.object %>
    <div class="row-fluid">   
      <div class="span4">
        <div class="control-group">
          <%= f.label :activitycategory_id, "Category", :class => "control-label" %>
          <div class="controls">
                <%= f.collection_select :activitycategory_id, activitycategories, :id, :name, :prompt => true %>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div id="venue" class="span4">
        <div class="control-group">
          <%= f.label :venue_id, "Venue", :class => "control-label" %>
          <div class="controls">
            <%= f.collection_select :venue_id, venues, :id, :name, :prompt => true %>
          </div>
        </div>
      </div>
      <div id="client" class="span4">
        <div class="control-group">
          <%= f.label :client_id, "Client", :class => "control-label" %>
          <div class="controls">
            <%= f.collection_select :client_id, clients, :id, :name, { :include_blank => "Unknown" } %>
          </div>
        </div>
      </div>
      <div id="date" class="span3">
        <div class="control-group">
          <%= f.label :date_start, "Date", :class => "control-label" %>
          <div class="controls">
            <% if @activity.date_start.present? %>
              <%= f.text_field :date_start, :class => "datepicker", :value => activity.date_start.strftime("%d %B %Y") %>
            <% else %>
              <%= f.text_field :date_start, :class => "datepicker" %>
            <% end %>
          </div>
        </div>
      </div>
      <div id="end_date" class="span3">
        <div class="control-group">
          <%= f.label :date_end, "End Date", :class => "control-label" %>
          <div class="controls">
            <% if activity.date_end.present? %>
              <%= f.text_field :date_end, :class => "datepicker", :value => activity.date_end.strftime("%d %B %Y") %>
            <% else %>
              <%= f.text_field :date_end, :class => "datepicker" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div id="work" class="row-fluid">   
      <div class="span4">
        <div class="control-group">
          <%= f.label :work_id, "Work", :class => "control-label" %>
          <div class="controls">
            <%= f.collection_select :work_id, works, :id, :title, :prompt => true %>
          </div>
        </div>
      </div>
      <div class="span3">
        <div class="control-group">
          <%= f.label :income, "Income", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :income%>
          </div>
        </div>
      </div>
      <div class="span3">
        <div class="control-group">
          <%= f.label :retail, "Retail value", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :retail%>
          </div>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit class: "btn" %>
    </div>
  <% end %>  