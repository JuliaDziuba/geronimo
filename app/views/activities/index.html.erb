<% provide(:crumbs, "Works," + works_path) %>
<% provide(:title, 'Activities') %>

<% if @activities.any? %>
	<% provide(:new_link, "activities/new") %>
	<%= render 'table_activities', activities: @activities, date_end_include: true, client_include: true %>
<% else %>
	<%= render 'get_started_activities', activity: @activity, activitycategories: @activitycategories, works: @works, venues: @venues, clients: @clients %>
<% end %>
