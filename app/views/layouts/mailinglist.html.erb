<!DOCTYPE html>
<html>
  <head>
    <title>Maker's Moon</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %> 
  </head>
  <body class="row-fluid span12 back">
    <div class="row-fluid offset2 moon">
      <div class="row-fluid">
        <div class="span3">
          <%= render 'mailinglists/title' %>
        </div>
        <div class="span3 offset1 center">
          <%= render 'shared/flash_messages' %>
          <%= yield %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span3">
          <br /><br />
          <%= render 'mailinglists/about' %>
        </div>
      </div>
    </div><!-- /span12 moon -->
  </body>
</html>

