<div class="navbar-inner">
    <nav>
      <a class="brand"><%= @user.name %></a>
      <ul class="nav pull-right">
        <% if @user.share_about %>
          <li><%= link_to "About", about_user_path(@user) %></li>
        <% end %>
        <% if @user.blog.present? %>
          <li><%= link_to "Blog", @user.blog %></li>
        <% end %>  
        <% if @user.share_works && @user.works.shared_with_public.any? %>
          <% @user.workcategories.parents_of_shared_with_public.each do |parent| %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= parent.name %> <b class="caret"></b>
              <ul class="dropdown-menu">
                <% @user.workcategories.children_of_parent(parent).shared_with_public.each do |child| %>
                  <li><%= link_to child.name, works_path(child) %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        <% end %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle icon" data-toggle="dropdown">
            &nbsp; &nbsp; &nbsp; &nbsp; <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Makers", users_path %></li>
            <li><%= link_to "Profile", edit_user_path(current_user) %></li>
            <li><%= link_to "Help",  help_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
        </li>

        <% if @user.share_purchase %>
          <li><%= link_to "Purchase", purchase_user_path(@user) %></li>
        <% end %>
        <% if @user.share_contact %>
          <li><%= link_to "Contact", contact_user_path(@user) %></li>
        <% end %>
        <% if signed_in? %>
          <li><%= link_to "Makers' Moon", user_path(@current_user) %></li>
        <% end %>
      </ul>
    </nav>
</div>