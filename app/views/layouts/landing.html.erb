<!DOCTYPE html>
<html>
  <head>
    <title>Makers' Moon</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %> 
    <%= render 'layouts/google_analytics' %>
  </head>
  <body class="row-fluid span12 back">
    <div class="row-fluid moon">
      <div class="row-fluid">
        <div class="span4 offset1">
          <%= render 'static_pages/title' %>
          <%= render 'static_pages/about' %>
        </div>
        <div class="span4 offset2 center">
          <%= render 'shared/flash_messages' %>
          <%= yield %>
        </div>
      </div>
    </div><!-- /span12 moon -->
  </body>
</html>

