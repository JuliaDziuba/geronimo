<% site = @current_user.sites.find_by_id(params[:id]) %>
<div class="navbar-inner">
    <nav>
      <a class="brand"><%= site.brand %></a>
      <ul class="nav pull-right">
        <li><%= link_to "about", "about" %></li>
        <li><%= link_to "blog", site.blog if site.blog.present? %></li> 
        <% if site.works.any? %>
          <% site.parent_workcategories_on_site.each do | parent | %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= parent.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if site.works_in_category(parent).any? %>
                  <li><%= link_to parent.name, parent.name %></li>
                <% end %>
                <% site.children_workcategories_on_site(parent).each do | child | %>
                  <li><%= link_to child.name, child.name %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        <% end %>

        <li><%= link_to "contact", "contact" %></li>
      </ul>
    </nav>
</div>