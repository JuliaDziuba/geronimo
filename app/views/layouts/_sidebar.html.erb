<div id="sidebar-content" class="show">
  <div class="accordion" id="accordianParent">
    <div class="accordion-group">
      <% if @current_user.works.any? %>
        <%= render 'layouts/sidebar_works' %>
      <% else %>
        <%= render 'layouts/sidebar_works_start' %>
      <% end %>
    </div>
    <div class="accordion-group">
      <div class="accordion-heading">
        <%= link_to "Venues", venues_path, class: "accordion-toggle-small" %>
      </div>
    </div>
    <div class="accordion-group">
      <div class="accordion-heading">
        <%= link_to "Clients", clients_path, class: "accordion-toggle-small" %>
      </div>
    </div>

    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle-small" data-toggle="collapse" data-parent="#accordianParent" href="#siteSection">
            Site
        </a>
        <div id="siteSection" class="accordion-body collapse">
          <div class="accordion-inner-small">
            <ul class="accordion-list">
              <li><%= link_to "New site", new_site_path %></li>
              <% @current_user.sites.each do |site| %>
                <li><%= link_to site.brand, site_path(site) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>