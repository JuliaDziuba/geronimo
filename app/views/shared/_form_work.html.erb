<%= form_for(@work, :html => { :class => "form-horizontal" }) do |f| %>
 	<%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">   
    <div class="span4">
      <div class="control-group">
        <%= f.label :worksubcategory_id, "Category", :class => "control-label" %>
        <div class="controls">
              <%= f.collection_select :worksubcategory_id, @worksubcategories, :id, :name%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :creation_date, "Creation date", :class => "control-label" %>
        <div class="controls">
          <% if @work.creation_date.present? %>
            <%= f.text_field :creation_date, :class => "datepicker", :value => @work.creation_date.strftime("%d %B %Y") %>
          <% else %>
            <%= f.text_field :creation_date, :class => "datepicker" %>
          <% end %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :title, :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :title%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :inventory_id, "Inventory ID", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :inventory_id %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :expense_hours, "Hours involved", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :expense_hours%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :expense_materials, "Material costs", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :expense_materials%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :income_wholesale, "Income", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :income_wholesale%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :income_retail, "Retail value", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :income_retail%>
        </div>
      </div>
    </div>
    <div class="span4 offset1">
      <%= f.text_area :description, placeholder: "Description", rows:"7"%>
      <div class="row-fluid">
        <div class="span3">
          <%= f.text_field :dimention1, placeholder: "Dimention X" %>
        </div>
        <div class="span3 offset1">
          <%= f.text_field :dimention2, placeholder: "Dimention Y" %>
        </div>
        <div class="span4 offset1">
          <%= f.text_field :dimention_units, placeholder: "Dimention units" %>
        </div>
      </div>
      <%= f.file_field :image1 %>
      <% if !@work.image1_file_name.nil? %>
        <%= image_tag @work.image1.url(:medium) %>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="form-actions">
      <%= f.submit class: "btn" %>
    </div> 
  </div>
<% end %>