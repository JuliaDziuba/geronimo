<% if !@workcategories.any? %>
	<%= render 'shared/get_started_workcategories' %>
<% else %>
<% if !@worksubcategories.any? %>
	<p>Great start creating categories! Add some more categories or create subcategories of works. Once subcategories are created then works can be added to these categories.</p>
<% else %>
	<p>Great start creating categories! Add some more categories and subcategories of works or start uploading works!</p>
	<h2><%= link_to "Start uploading works!", new_work_path %></h2>
<% end %>
<ul class="list">
  <% @workcategories.each do |workcategory| %>
    <li class="spaced">
      <%= render 'shared/list_element_workcategory', category: workcategory %>
      	<ul class="sublist">
      		<% if workcategory.worksubcategories.any? %>
      			<% workcategory.worksubcategories.each do |worksubcategory| %>
         	 		<li class="spaced">
           		<%= render 'shared/list_element_worksubcategory', category: workcategory, subcategory: worksubcategory %>
         		 </li>
        		<% end %>
        		<li><%= link_to 'Create another subcategory', new_workcategory_worksubcategory_path(workcategory) %></li>
        	<% else %>
      			<%= link_to 'Create a subcategory', new_workcategory_worksubcategory_path(workcategory) %>
      		<% end %>
      	</ul>
    </li>
  <% end %>
  <li>
    <a id="new_workcategory_select" href="#new_workcategory">Create another category</a>
  </li>
</ul>
<div id="new_workcategory" class="not-displayed">
  <%= render 'shared/form_category', category: @workcategory %>
</div>
<% end %>	