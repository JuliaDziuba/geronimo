<%= form_for(work, :html => { :class => "form-horizontal" }) do |f| %>
 	<%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">   
    <div class="span4">
      <div class="control-group">
        <%= f.label :workcategory_id, "Category", :class => "control-label" %>
        <div class="controls">
              <%= f.collection_select :workcategory_id, categories, :id, :name, { :include_blank => "Uncategorized" } %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :creation_date, "Creation date", :class => "control-label" %>
        <div class="controls">
          <% if work.creation_date.present? %>
            <%= f.text_field :creation_date, :class => "datepicker", :value => work.creation_date.strftime("%d %B %Y") %>
          <% else %>
            <%= f.text_field :creation_date, :class => "datepicker" %>
          <% end %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :title, "Title", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :title%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :inventory_id, "Inventory ID", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :inventory_id %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :expense_hours, "Hours invested", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :expense_hours%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :expense_materials, "Material costs", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :expense_materials%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :income, "Income", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :income%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :retail, "Retail value", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :retail%>
        </div>
      </div>
    </div>
    <div class="span3 offset1">
      <% if work.image1_file_name.nil? %>
        <%= f.file_field :image1 %>
      <% else %>
        <div id="work_image">
          <%= image_tag work.image1.url(:medium) %>
        </div>
        <a id="update_image_display" class="display_toggle" href="#update_image">Update Image</a>
        <div id="update_image" class="not-displayed">
          <%= f.file_field :image1 %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8">
      <div class="control-group">
        <%= f.label :materials, :class => "control-label" %>
        <div class="controls"><%= f.text_area :materials, rows: "1" %></div>
      </div>
      <div class="control-group">
        <%= f.label :dimensions, "Dimensions", :class => "control-label" %>
        <div class="controls"><%= f.text_field :dimensions %></div>
      </div>
      <div class="control-group">
        <%= f.label :description, :class => "control-label" %>
        <div class="controls"><%= f.text_area :description, rows: "3" %></div>
      </div>
      <!--
      <div class="row-fluid">
        <div class="span4">
          <div class="control-group">
            <%= f.label :quantity, "Quantity", :class => "control-label" %>
            <div class="controls"><%= f.text_field :quantity, placeholder: "How many works were created?" %></div>
          </div>
        </div>
      </div> -->
    </div>
  </div>
  <div class="row-fluid">
    <div class="control-group not-displayed">
      <%= f.label :share_makers, "Share with other makers", :class => "control-label" %>
      <div class="controls"><%= f.check_box :share_makers %></div>
    </div>
    <div class="control-group">
      <%= f.label :share_public, "Make public", :class => "control-label" %>
      <div class="controls"><%= f.check_box :share_public %></div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="form-actions">
      <%= f.submit class: "btn" %>
    </div> 
  </div>
<% end %>