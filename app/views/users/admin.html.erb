<% provide(:page, 'Admin') %>
<% provide(:title, "Admin Dashboard") %>
<h2>Change Password</h2>
<div class="row-fluid">
  <div class="span12">
    <%= form_for(@user, :html => { :class => "form-inline"} ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="row-fluid">
          <div class="span2"><%= f.text_field  :username, placeholder: "Username" %></div>
          <div class="span2"><%= f.password_field  :password, placeholder: "New password" %></div>
          <div class="span2"><%= f.password_field  :password_confirmation, placeholder: "New password again" %></div>
          <div class="span2"><%= f.submit "Save", class: "btn" %></div>
        </div>
    <% end %>
  </div>
  <br /><br /><br /><br />
</div>
<div class="row-fluid">
  <div class="span6">
    <h2>Data base entries</h2>  
    <table>
      <caption></caption>
      <thead>
        <th>&nbsp;</th>
        <th>Today</th>
        <th>This week</th>
        <th>This month</th>
        <th>This year</th>
        <th>Ever</th>
      </thead>
      <tbody>
        <% @newEntries.each do | k, a | %>
          <tr>
            <td><%= k %></td>
              <% a.each do | v |  %>
                <td><%= v %></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="span6">
    <h2>User data</h2>  
    <table>
      <caption></caption>
      <thead>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Works</th>
        <th>Clients</th>
        <th>Venues</th>
        <th>Activities</th>
      </thead>
      <tbody>
        <% @userH.each do | k, a | %>
          <tr>
            <% k.split(" ").each do | u | %>
              <td><%= u %></td>
            <% end %>
            <% a.each do | c | %>
              <td><%= c %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
 