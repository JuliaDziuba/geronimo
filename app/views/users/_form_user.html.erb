<%= form_for(user, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">
    <div class="span5"><!-- first column -->
      <legend>Public to makers</legend>
      <% if user.image_file_name.nil? %>
        <%= f.label :image, "Upload Image", :class => "control-label" %>
        <div  class="controls"><%= f.file_field :image %></div>
      <% else %>
        <div id="user_image" class="controls">
          <%= image_tag user.image.url(:thumb) %>
        </div>
        <a class="controls" id="update_image_select" href="#update_image">Update Image</a>
        <div id="update_image" class="controls not-displayed"><%= f.file_field :image %></div>
      <% end %>
      <div class="control-group">
        <%= f.label :name, "Full Name", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :about, "400 characters to tell makers what you're about", :class => "control-label" %>
        <div class="controls"><%= f.text_area :about, rows: "4" %></div>
      </div>
      <div class="control-group">
        <%= f.label "Where are you located?" %>
        <%= f.label :location_city, "City", :class => "control-label" %>
        <div class="controls"><%= f.text_field :location_city, rows: "4" %></div>
      </div>
      <div class="control-group">
        <%= f.label :location_state, "State", :class => "control-label" %>
        <div class="controls"><%= f.text_field :location_state, rows: "4" %></div>
      </div>
    </div><!-- /first column -->
    <div class="span5 offset1">
      <legend>Private to all</legend>
      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :email%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field  :password%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password_confirmation, "Confirm Password", :class => "control-label" %>
        <div class="controls">
          <%= f.password_field  :password_confirmation%>
        </div>
      </div><!-- second column -->
    </div><!-- /second column -->

  </div>
  <div class="row-fluid">
    <div class="controls"><%= f.submit "Update", class: "btn" %></div>
  </div>
<% end %>