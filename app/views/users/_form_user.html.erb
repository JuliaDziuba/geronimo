<%= form_for(user, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">
    <div class="span5"><!-- first column -->
      <div class="control-group">
        <%= f.label :name, "Business Name", :class => "control-label" %>
        <div class="controls"><%= f.text_field :name, class: "popover-input", rel: "popover", :"data-title" => "Business name", :"data-content" => "While usernames and domains are often restricted you can call your business whatever you like. Makers sometimes simply use their names." %></div>
      </div>
      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :email%>
        </div>
      </div>
      <a id="update_password_display" class="display_toggle" href="#">Update Password</a>
      <div id="update_password" class="not-displayed">
        <div class="control-group">
          <%= f.label :password, "New Password", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field  :password%>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password_confirmation, "Again *", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field  :password_confirmation%>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="row-fluid">
    <div class="controls"><%= f.submit "Update", class: "btn" %></div>
  </div>
<% end %>