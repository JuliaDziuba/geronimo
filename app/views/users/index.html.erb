<% provide(:title, 'Makers on their way to the moon') %>
<ul>
	<% @users.each do |user| %>
		<li class="list spaced">
			<strong><%= user.name %></strong> (<%= user.username %>)
			<span class="lighter"> 
				<% if !user.location_city.blank? %><%= user.location_city %>,<% end %> 
				<% if !user.location_state.blank? %><%= user.location_state %><% end %>
			</span><br />
			<i><%= user.about %></i><br />
		</li>
	<% end %>
</ul>

