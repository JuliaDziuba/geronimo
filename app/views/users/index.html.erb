<% provide(:title, 'Makers on their way to the moon') %>
<ul class="media-list">
  <% @users.each do |user| %>
		<li class="media">
	    <a class="pull-left" href="#">
	      <img class="media-object" data-src="holder.js/64x64">
	    </a>
	    <div class="media-body">
	      <h4 class="media-heading"><%= user.name %></h4>
	      <div class="media">
	      	(<%= user.username %>)
		      <span class="lighter"> 
						<% if !user.location_city.blank? %><%= user.location_city %>,<% end %> 
						<% if !user.location_state.blank? %><%= user.location_state %><% end %>
					</span><br />
	       	<i><%= user.about %></i>
	     </div>
	    </div>
	  </li>
  <% end %>
</ul>

