<% provide(:title, "#{@category.name} #{@category.parent.name if @category.parent.name != 'None'}") %>
<% provide(:subnav, "All Available") %>

<div class="row-fluid">
	<div class="pw_container span3">
		<div id="pw_thumbnails" class="row-fluid pw_height mousescroll">
			<table><tr>
			<% @works.each_with_index do |work, index| %>
				<% if index % 3 == 0 and index != 0 %>
					</tr><tr>
				<% end %>
				<td class="pw_thumbnail">
					<%= link_to image_tag(work.image1.url(:thumb)), "/makers/#{@user.to_param}/#{@category.name}/#{work.inventory_id}" %>
				</td>
			<% end %>
		</tr></table>
		</div>
	</div>
	<div class="pw_container span9">
		<div class="row-fluid pw_height pw_image span6">
			<%= image_tag @work.image1.url(:medium) %>
		</div>
		<div class="row-fluid span6">
			<p>
				<strong><%= @work.title %></strong><span class="lighter">, <%= @work.creation_date.strftime("%B %Y") %><br />
				<%= @work.current_activity %><% if @user.share_price && !@work.income_retail.blank? %>, $<%= @work.income_retail %><% end %></span>
			</p>
			<p><%= @work.description %></p>
		</div>
	</div>
</div>
<% if !@category.artist_statement.blank? %>
	<div class="row-fluid pw_statement">
		<div class="pw_container span12">
			<%= "Artist's statement on #{@category.name} #{@category.parent.name if @category.parent.name != 'None'}:" %><br />
			<i><%= @category.artist_statement %></i>
		</div>
	</div>
<% end %>

