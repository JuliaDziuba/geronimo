<%= form_for(question , :url => url_for(:controller => 'questions', :action => 'create')) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">
    <div>
      <div class="control-group">
        <div class="controls"><%= f.text_area :question, placeholder: "If your question is not answered in the FAQ section or by the index please send us the question via email (info@makersmoon.com) or this form. We will send you a response via email and work to expand the help section on this topic.", rows: "6" %></div>   
        <%= f.submit "Send", class: "btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>