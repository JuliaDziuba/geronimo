<p>This configures you public site. All information entered will be presented to the <b>PUBLIC</b>!</p>
<%= form_for(site, :html => { :class => "form-horizontal" }) do |f| %>
 	<%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">
    <div class="span4">
      <legend>Site</legend>
      <div class="control-group">
        <%= f.label :brand, :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :brand%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :tag_line, "Tag line", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :tag_line%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :domain, "Domain URL", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :domain%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :blog, "Blog URL", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :blog%>
        </div>
      </div>
    </div>
    <div class="span6">
      <legend>Artist</legend>
      <div class="control-group">
        <%= f.label :bio_pic, "Photo URL", :class => "control-label" %>
        <div class="controls">
              <%= f.text_field :bio_pic%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :bio_text, "About", :class => "control-label" %>
        <div class="controls">
          <%= f.text_area :bio_text, placeholder: "The public site's about page will automatically include information on the venues you wish to tell fans about. What other biographical informaiton would you like to include?", rows:"5"%>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid" >
    <div class="span4">
      <legend>Contact</legend>
      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls"><%= f.text_field :email%></div>
      </div>
      <div class="control-group">
        <%= f.label :phone, :class => "control-label" %>
        <div class="controls"><%= f.text_field :phone%></div>
      </div>
      <div class="control-group">
        <%= f.label :address_street, "Street address", :class => "control-label" %>
        <div class="controls"><%= f.text_field :address_street%></div>
      </div>
      <div class="control-group">
        <%= f.label :address_city, "City", :class => "control-label" %>
        <div class="controls"><%= f.text_field :address_city%></div>
      </div>
      <div class="control-group">
        <%= f.label :address_state, "State", :class => "control-label" %>
        <div class="controls"><%= f.text_field :address_state%></div>
      </div>
      <div class="control-group">
        <%= f.label :address_zipcode, "Zip code", :class => "control-label" %>
        <div class="controls"><%= f.text_field :address_zipcode%></div>
      </div>
    </div>
    <div class="span6">
      <legend>Social Sites</legend>
      <div class="control-group">
        <%= f.label :social_etsy, "Etsy", :class => "control-label" %>
        <div class="controls"><%= f.text_field :social_etsy %></div>
      </div>
      <div class="control-group">
        <%= f.label :social_linkedin, "LinkedIn", :class => "control-label" %>
        <div class="controls"><%= f.text_field :social_linkedin %></div>
      </div>
      <div class="control-group">
        <%= f.label :social_facebook, "Facebook", :class => "control-label" %>
        <div class="controls"><%= f.text_field :social_facebook %></div>
      </div>
      <div class="control-group">
        <%= f.label :social_twitter, "Twitter", :class => "control-label" %>
        <div class="controls"><%= f.text_field :social_twitter %></div>
      </div>
      <div class="control-group">
        <%= f.label :social_pinterest, "Pinterest", :class => "control-label" %>
        <div class="controls"><%= f.text_field :social_pinterest %></div>
      </div>
      <div class="control-group">
        <%= f.label :social_googleplus, "Google+", :class => "control-label" %>
        <div class="controls"><%= f.text_field :social_googleplus %></div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="form-actions">
      <%= f.submit class: "btn" %>
    </div> 
  </div>
<% end %> 
    
