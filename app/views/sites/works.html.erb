<% provide(:title, "#{@category.name} #{@category.parent.name if @category.parent.name != 'None'}") %>

<div class="row-fluid">
	<div id="public_works" class="span4 offset1">
		<div class="row-fluid">
			<% @works.each do |work| %>
				<a class="public_work_thumbnails"><%= image_tag work.image1.url(:thumb) %></a>
			<% end %>
		</div>
		<div class="row-fluid">
			<%= @category.description %>
		</div>
	</div>
	<div id="public_work" class="span5 offset1">
		<%= image_tag @work.image1.url(:medium) %>
		<p><strong><%= @work.title %></strong><span class="lighter">, <%= @work.creation_date %>, <%= @work.current_activity %></span></p>
		<p><%= @work.description %></p>
	</div>
</div>

