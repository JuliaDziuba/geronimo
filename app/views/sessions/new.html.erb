<div class="box_signin">
  <%= form_for(:session, url: sessions_path, :html => { :class => "form-inline" }) do |f| %>
    <%= f.text_field :email, id: "Email", placeholder: "Email", class: "input-small"%>
    <%= f.password_field :password, id: "Password", placeholder: "Password", class: "input-small" %>
    <%= f.submit "Sign in!", class: "btn" %>
  <% end %>
  <a class="landing_tag" href="<%= signup_path %>">New user? Sign up!</a>
</div>
