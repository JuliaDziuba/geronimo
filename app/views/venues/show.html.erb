<% provide(:crumbs, "Venues," + venues_path + "|" + @venue.venuecategory.name + "," + venuecategory_path(@venue.venuecategory)) %>
<% provide(:title, @venue.name) %>
<% provide(:edit_form, "edit_venue") %>

<div id="edit_venue" class="not-displayed">
  <%= render 'shared/form_venue', venue: @venue %>
</div>

<div id="venue_data">
	<%= render 'shared/venue_contact', venue: @venue %>
	<br />
	<%= render 'shared/venue_address', venue: @venue %>
</div>

<% if !@activities.empty? %>
	<br />
	<br />
	<h2>Works Currently Consigned</h2>
	<%= render 'shared/table_activities', activities: @activities %>
	<h2>Works Previously Consigned</h2>
	<h2>Works Sold</h2>
	
<% end %>