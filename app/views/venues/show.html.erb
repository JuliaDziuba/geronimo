<h1>
		<span class="venue-title"><%= link_to @venue.name, venue_path(@venue) %>
		 	&nbsp; <%= link_to icon(:edit), edit_venue_path(@venue) %>
			&nbsp; <%= link_to icon(:trash), @venue, method: :delete,
		  	data: { confirm: "Delete #{@venue.name}?" },
		    title: "Delete #{@venue.name}?" %>
	</span>
</h1>
<span class = "list-description"><%= @venue.venuecategory.name %><br />
<span class="list-description">
  <%= @venue.phone.to_s + " | " + @venue.email + " | " + @venue.site %><br />
  <%= @venue.address_street + ", " + @venue.address_city + " " + @venue.address_state + ", " + @venue.address_zipcode.to_s %>
</span>

<% if !@activities.empty? %>
	<h2>Activities at <%= @venue.name %></h2>
	<%= render 'shared/table_activities', activities: @activities %>
<% end %>