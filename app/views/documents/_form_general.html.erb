<div class="span4">
	<div class="control-group">
		<%= f.label :name, "Name", :class => "control-label" %>
		<div class="controls"><%= f.text_field :name %></div>
	</div>
	<div class="control-group">
		<%= f.label :date, "Date", :class => "control-label" %>
		<div class="controls"><%= f.text_field :date, :class => "datepicker" %></div>
	</div>
	<%= f.hidden_field :category, :value => category %>
</div>